    cout << "\t\tNumber Of Burger  : ";
    cin >> purchase_burger;
    cout << "\t\tNumber Of Samosha : ";
    cin >> purchase_samosha;
    cout << "\t\tNumber Of Momos   : ";
    cin >> purchase_momos;
    cout << "\t\tNumber Of IceCream: ";
    cin >> purchase_icecream;
    cout << "\t\tNumber Of ColdDrink (Fizz) : ";
    cin >> purchase_colddrink;
    customerDemand:
