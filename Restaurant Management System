        cout<< "\n\t\t\tsales Burger Quantity : " << sell_burger<<endl;
        cout<< "\n\t\t\tRemaining Burger Quantity : " << purchase_burger - sell_burger<<endl;
        cout<< "\n\t\t\tTotal Burger Price in a Day : " << burger<<endl;

